<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="10dp"
    android:background="#dfd2df"
    tools:context=".MainActivity">

    <TextView
        android:layout_margin="10dp"
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/menu_txt"
        android:textSize="25sp"
        android:textAlignment="center"
        android:textColor="@color/colorDeepViolen"
        android:textStyle="bold"/>

    <RadioGroup
        android:id="@+id/rg1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <RadioButton
        android:id="@+id/rb1"
        android:layout_margin="5sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/value_1"
        android:textStyle="bold"
        android:textSize="20sp"
        />

    <RadioButton
        android:id="@+id/rb2"
        android:layout_margin="5sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/value_2"
        android:textStyle="bold"
        android:textSize="20sp"
        />


</RadioGroup>

    <Button
        android:id="@+id/b1"
        android:layout_margin="10sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textStyle="bold"
        android:text="@string/clicked_txt"
        android:textColor="#8c033a"
        />

    <TextView
        android:id="@+id/tv2"
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="20dp"
        android:textAlignment="center"/>


    <RatingBar
        android:id="@+id/rB"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:rating="0"
        android:stepSize="1"
        android:progressBackgroundTint="#a70202"
        android:progressTint="#1a6b02"
        />

    <TextView
        android:id="@+id/tv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"/>

    <Button
        android:layout_margin="10dp"
        android:id="@+id/b2"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="#a61f04"
        android:textAlignment="center"
        android:textSize="20dp"
        android:text="@string/submit_txt"/>




</LinearLayout>