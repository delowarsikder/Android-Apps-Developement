<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#02a124"
    android:gravity="center"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_margin="5sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="horizontal">

        <TextView
            android:textColor="#003296"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Username :"
            android:textSize="25sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/signInUsernameID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="user name"
            android:textStyle="bold"
            android:textSize="25dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_gravity="bottom"
        android:layout_margin="5sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView

            android:textColor="#003296"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="25sp"
            android:text="Password :"/>

        <EditText
            android:inputType="textPassword"
            android:id="@+id/signInPasswordID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="user password"
            android:textStyle="bold"
            android:textSize="25dp"/>

    </LinearLayout>

    <LinearLayout
        android:padding="10sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/signInButtonID"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="25sp"
            android:background="#00126c"
            android:text="Sign in"
            android:textColor="#eceff1"
            android:layout_margin="5sp"
            />

        <Button
            android:layout_margin="5sp"
            android:background="#4e0149"
            android:id="@+id/createId"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="25sp"
            android:text="Sign Up here"
            android:textColor="#f7f6f7"
            />


    </LinearLayout>

</LinearLayout>